light_mode unshaded;

uniform highp float FADE_IN_DIST;
uniform highp float ALPHA;

const highp vec4 brightCol = vec4(0.2, 0.5, 0.75, 0.75);

void fragment() {

    float dist = distance(UV, vec2(0.5));
    float edge0 = 0.5 - FADE_IN_DIST;
    float edge1 = 0.5;
	float alpha = clamp((dist - edge0) / (edge1 - edge0), 0.0, 1.0);

	if (alpha >= 1.0) {
	    alpha = 0.0;
	}

    COLOR.rgb = brightCol.rgb;
    COLOR.a = brightCol.a * (alpha * ALPHA);
}
