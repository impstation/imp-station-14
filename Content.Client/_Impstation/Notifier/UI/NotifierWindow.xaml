<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                      Title="{Loc 'notifier-window-title'}"
                      MinSize="10 25"
                      SetSize="400 600">
    <BoxContainer Margin="5 5 5 5" Orientation="Vertical">
        <CheckBox Name="EnableNotifierCheckBox" Text="{Loc 'notifier-window-enable-notifier'}" />
        <Label Name="CharacterLimit" Access="Public" />
        <PanelContainer HorizontalExpand="True" VerticalExpand="True" MinWidth="200">
            <PanelContainer.PanelOverride>
                <graphics:StyleBoxFlat BackgroundColor="#1B1B1E" />
            </PanelContainer.PanelOverride>
            <TextEdit
                Name="NotifierFreetext"
                Access="Public"
                MinHeight="200"
                VerticalExpand="True" />
        </PanelContainer>
        <Label Name="UnsavedChangesWarning" Text="{Loc notifier-window-saved-changes}" />
        <Button
            Name="SaveNotifierSettings"
            Access="Public"
            Text="Save"
            Disabled="True" />
    </BoxContainer>
</controls:FancyWindow>
