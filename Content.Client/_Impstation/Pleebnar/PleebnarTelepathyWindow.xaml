<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="{Loc 'pleebnar-telepathy-window'}"
                      MinSize="10 25"
                      SetSize="200 400">
    <BoxContainer Margin="5 5 5 5" Orientation="Vertical">
        <LineEdit Name="SearchBar" PlaceHolder="Search" HorizontalExpand="True" Margin="0 4" />
        <Button Name="RandomVisionButton" Access="Public" Text="{Loc 'pleebnar-telepathy-randomvisionbutton'}" />
        <ScrollContainer HScrollEnabled="False"
                         HorizontalExpand="True"
                         VerticalExpand="True"
                         MinHeight="50"
                         SizeFlagsStretchRatio="2.5"
                         Margin="5"
                         Name="VisionScrollbar">
            <BoxContainer Name="VisionsBox" Access="Public" Align="Center" Orientation="Vertical"/>
        </ScrollContainer>
    </BoxContainer>
</controls:FancyWindow>
